{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::984649216408:oidc-provider/token.actions.githubusercontent.com"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
          "token.actions.githubusercontent.com:sub": "repo:Soda-xyz/KubernetesToDo:ref:refs/heads/main"
        }
      }
    }
  ]
}

/*
  Usage:
  - Replace 984649216408, Soda-xyz, KubernetesToDo, main with your values.
  - Create the role in AWS IAM and attach the policy in `ci-role-policy.json`.
  - This trust policy restricts the role to be assumable only by GitHub Actions runs from the specified repo and branch.
*/

